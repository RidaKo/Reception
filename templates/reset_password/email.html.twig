{% extends 'base.html.twig' %}

{% block title %}Reset Your Password{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-body">
                    <p class="lead mb-3">To reset your password, please visit the following link:</p>
                    <a href="{{ url('app_reset_password', {token: resetToken.token}) }}" class="btn btn-primary mb-4">Reset Password</a>
                    <p class="text-muted">This link will expire in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}