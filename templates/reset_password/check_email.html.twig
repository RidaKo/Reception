{% extends 'base.html.twig' %}

{% block title %}Reset Your Password{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-body">
                    <h1 class="display-4">Password Reset Email Sent</h1><br>
                    <p class="lead">
                        If an account matching your email exists, you should receive an email shortly with a link to reset your password.
                        The link will expire in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
                    </p><br>
                    <p>If you don't receive an email, please check your spam folder or <a href="{{ path('app_forgot_password_request') }}" class="btn btn-primary">try again</a>.</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}