{% extends 'base.html.twig' %}

{% block title %}Reset Your Password{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
            
            <h1 class="display-4">Reset Your Password</h1>
            
            {{ form_start(requestForm, {'attr': {'class': 'form-signin'}}) }}
            
            <div class="mb-3">
                {{ form_row(requestForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter your email address'}}) }}
            </div>
            
            <p class="text-muted">
                Enter your email address, and we will send you a link to reset your password.
            </p>
            
            <button class="btn btn-lg btn-primary btn-block" type="submit">Send Password Reset Email</button>
            
            {{ form_end(requestForm) }}
        </div>
    </div>
</div>
{% endblock %}
