{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" class="form-signin">
                {% if error %}
                    <div class="alert alert-danger" role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {% if app.user %}
                    <p class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }},
                        <a href="{{ path('app_logout') }}" class="btn btn-danger btn-sm">Logout</a>
                    </p>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

                {{ form_start(form) }}
                {{ form_row(form.email) }}
                {{ form_row(form.password) }}
                    <label>
                    <input type="checkbox" name="_remember_me" checked>
                    Keep me logged in
                    </label>

                {{ form_end(form) }}

                <div class="mt-3">
                    <a href="{{ path('app_management_registration') }}" class="btn btn-default btn-sm">Register</a>
                    <a href="{{ path('app_forgot_password_request') }}" class="btn btn-default btn-sm">Forgot Password</a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}